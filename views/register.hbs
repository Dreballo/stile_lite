<div class="container">
    <div class="col s12">
        <form id="register"  action="/register/create" method="POST">
            <div class="input-field col s12">

                <input name="first_name" type="text"   class="validate">
                <label for="first_name">First Name</label>
            </div>
            <div class="input-field col s12">

                <input name="last_name" type="text"   class="validate">
                <label for="last_name">Last Name</label>
            </div>
            <div class="input-field col s12">

                <input name="email" type="email"   class="validate">
                <label for="email">Email</label>
            </div>
            <div class="input-field col s12">

                <input name="password" type="password"  class="validate">
                <label for="password">Password</label>
            </div>
            <div class="input-field col s12">

                <input id="datepicker" name="datepicker" type="text"  class="datepicker">
                <label for="datepicker">Date of Birth</label>
            </div>
            <div class="input-field col s12">

                <input name="mobile" type="text"   class="validate">
                <label for="mobile">Mobile</label>
            </div>
            <div class="col s12 center">
                <button class="btn-large waves-effect waves-light" type="submit">Register</button>
            </div>
        </form>
    </div>
</div>